@model ExerciseTWJG.Models.clsGrafo

@{
    ViewBag.Title = "Index";
}

@using (@Html.BeginForm("Upload", "Grafo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome to JG Trains!</h1>
            <div class="col-md-6">
                <p>Please load a file with the following rules:</p>

                <ul>
                    <li>No route should appear more than once, and for a defined route, the origin and destination can not be the same city.</li>
                    <li>The names of cities correspond to the first letters of the alphabet, from A to E. A route between cities (eg A to B) with a distance of 5 is represented as AB5.</li>
                    <li>Example Data: "AB5, BC4, CD8, DC8, DE6, AD5, CE2, EB3, AE7"</li>
                </ul>
            </div>

            <div class="col-md-6">

                <div class="panel panel-default">
                    <div class="panel-body">
                        <input type="file" name="file" class="custom-file-input" required />

                    </div>
                    <div class="panel-footer">
                        <button class="btn btn-primary btn-lg" type="submit"> Consultar</button>

                    </div>
                </div>

            </div>
        </div>
    </div>
}


